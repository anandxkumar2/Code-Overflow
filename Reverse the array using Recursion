#include<iostream>
using namespace std;
void pa(int *a,int n)
{
    if(n==0)
    {
        return ;
    }

    cout<<a[n-1]<<" ";  // First thing is printed by yourself Recursion
    pa(a,n-1);
                     // This is for the 1st case and in last it will encounter return nothing
}
void pa2(int *a,int n)
{
if(n==0)
    {
        return ;
    }
                           // First thing is printed by yourself Recursion
    pa(a+1,n-1);
    cout<<a[0]<<" ";
}
int main()
{
    cout<<"Enter Number Of Elements"<<endl;
    int n;
    cin>>n;
    int a[100];
    cout<<"Enter elements "<<endl;
    for(int i=0;i<n;i++)
    {
        cin>>a[i];
    }
    cout<<"Original Array : ";
    for(int i=0;i<n;i++)
    {
        cout<<a[i]<<" ";
    }


   cout<<endl<<"Reverse Array : ";
   pa(a,n);
}
